<div class="container mt-4 mb-4">
  <!-- <h2 class="pb-4"><%= t(".sign_in") %></h2> -->

  <%= link_to ("Inscription"), new_registration_path(resource_name) %><br />

  <div class="pb-4"></div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: 'mb-4', autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: 'mb-4', autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(".sign_in"), class: 'btn btn-lg btn-block submit-btn-green mb-4' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
