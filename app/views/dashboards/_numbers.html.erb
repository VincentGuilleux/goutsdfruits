<h1 class="data-amount pb-4">Données mensuelles</h1>

<div class="monthly-data-card-grid">

  <div class="monthly-data-card" >
    <%= image_tag('multiple-actions-add-blue.svg') %>
    <div class="monthly-data-infos" >
      <p class="data-amount"> <%= new_clients_current_month %> </p>
      <p class="big-text-semi-bold grey-light">Nouveaux clients</p>
    </div>
  </div>

  <div class="monthly-data-card" >
    <%= image_tag('task-list-approve-blue.svg') %>
    <div class="monthly-data-infos" >
      <p class="data-amount"><%= orders_number_current_month %></p>
      <p class="big-text-semi-bold grey-light">Commandes</p>
    </div>
  </div>

  <div class="monthly-data-card" >
    <%= image_tag('task-list-approve-blue.svg') %>
    <div class="monthly-data-infos" >
      <p class="data-amount"><%= orders_total_current_month %>
        <sup><span class="big-text-bold">€</span></sup></p>
      <p class="big-text-semi-bold grey-light">Total des commandes</p>
    </div>
  </div>

  <div class="monthly-data-card" >
    <%= image_tag('shipment-upload-blue.svg') %>
    <div class="monthly-data-infos" >
      <p class="data-amount"><%= number_with_delimiter(products_total_value) %>
        <sup><span class="big-text-bold">€</span></sup></p>
      <p class="big-text-semi-bold grey-light">Valeur du stock</p>
    </div>
  </div>

</div>
