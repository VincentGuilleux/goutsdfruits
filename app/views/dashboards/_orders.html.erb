<% @orders.each do |order| %>

  <div class="card order-card-collapsed-dashboard">
    <div class="order-card-header">
      <div class="d-flex justify-content-between">
        <div>
          <p class="small-text-bold grey-medium">#GF<%= order.id %></p>
        </div>
        <div>
          <p class="small-text-bold grey-medium"> <%= order.date %></p>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <h1 class="name-font"><%= order.client.first_name %> <%= order.client.last_name %> </h1>
        <h1 class="price-font"><%= order.total_price_cents / 100 %> â‚¬</h1>
      </div>
    </div>
    <div class="line-order-card"></div>
    <div class="order-card-header-bottom-part">
      <div class="d-flex justify-content-between">
        <div class="order-card-picto d-flex">
          <div class="action-picto done-action">
            <%= image_tag 'shipment-clock-white.svg' %>
          </div>
          <div class="action-picto waiting-action">
            <%= image_tag 'shipment-check-light-green.svg' %>
          </div>
          <div class="action-picto">
            <%= image_tag 'delivery-truck-light-grey.svg' %>
          </div>
        </div>
        <div class="order-card-picto">
          <%= image_tag 'add-medium-grey.svg' %>
        </div>
      </div>
      <div class="underline"></div>
    </div>
  </div>

<% end %>

