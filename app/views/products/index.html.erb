<h1 class="page-title">Produits</h1>

<div class="main-container">
  <div class="container-index-products">
    <% @products.each do |product| %>
      <div class="card-product" >
        <%= cl_image_tag product.photo.key %>
        <div class="card-product-infos py-2">
          <div class="card-product-subelement">
            <p class="semi-small-text grey-medium"><%= product.product_category %> </p>
            <p class="semi-small-text-bold green">
              <%= (product.unit_price_cents/100).to_i %> â‚¬
              <% if product.unit_type == 'decigramme' %>
                <sup>/kg </sup>
              <% else %>
                <sup>/<%= product.unit_type %> </sup>
              <% end %>
            </p>
          </div>
          <div>
            <p class="big-text-bold grey-dark"><%= product.name %> </p>
          </div>
          <div class="card-product-subelement">
            <% if product.unit_type == 'decigramme' %>
            <p class="semi-small-text-bold grey-medium"><%= product.total_remaining_quantity/100 %> kgs
            <% else %>
            <%= product.total_remaining_quantity %> <%= product.unit_type %>s</p>
            <% end %>
            <%= link_to image_tag('pencil-write-2-grey-light.svg'), product_path(product) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
